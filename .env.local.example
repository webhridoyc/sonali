# Admin route protection (required for /admin)
ADMIN_USER=admin
ADMIN_PASSWORD=change-me
ADMIN_SESSION_SECRET=change-me-to-a-long-random-secret

# Admin session behavior (optional)
# Default: 30 minutes and session cookie (re-login when browser closes)
# ADMIN_SESSION_TTL_SECONDS=1800
# ADMIN_SESSION_PERSIST=true

# Optional: show Admin link in nav
NEXT_PUBLIC_SHOW_ADMIN_LINK=true

# Firestore persistence for admin inbox (recommended)
# Choose ONE of the following:
# 1) Base64-encoded service account JSON (easiest on Windows)
# FIREBASE_ADMIN_CREDENTIALS_BASE64=
#
# 2) Raw JSON string (harder to paste/escape)
# FIREBASE_ADMIN_CREDENTIALS=
